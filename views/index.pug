extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Some stuff I did

      p.lead.text-light
        | Here you will found some examples to get inspired to build your site
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3.pic-box
      each project in projects
            .cell.sites
              a(href=`project/${project.id - 1}`)
                img.thumbnail(src=`${project.image_urls[0]}`)
                h5 #{project.project_name}

